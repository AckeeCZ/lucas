{
    "name": "@ackee/lucas",
    "version": "0.3.1",
    "description": "Set of React componets, High order components and other UI tools we miss in other packages.",
    "main": "lib/index.js",
    "module": "es/index.js",
    "scripts": {
        "build:lib": "BABEL_ENV=lib babel src --out-dir lib --extensions \".ts,.tsx\" --ignore \"**/*.story.tsx,**/*.d.ts\" --source-maps inline",
        "build:es": "BABEL_ENV=es babel src --out-dir es --extensions \".ts,.tsx\" --ignore \"**/*.story.tsx,**/*.d.ts\" --source-maps inline",
        "build:types": "tsc --project tsconfig.types.json --emitDeclarationOnly",
        "build": "npm run clean && npm run type-check && npm run build:lib && npm run build:es && npm run build:types",
        "storybook": "rm -rf build && start-storybook -p 6006",
        "build-storybook": "cross-env BABEL_ENV=development build-storybook -o build",
        "lint": "tslint \"src/**/*.{ts,tsx}\"",
        "test": "BABEL_ENV=test jest",
        "clean": "rm -rf lib es",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "start": "npm run build && onchange 'src/**/*.{ts,tsx}' -- npm run build",
        "version": "changelog-it && vim CHANGELOG.md && git add CHANGELOG.md",
        "size": "package-size ./es --no-cache"
    },
    "author": "Lukáš Horák <lukas.horak@ackee.cz>",
    "contributors": [
        "Jiří Čermák <jiri.cermak@ackee.cz>"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/AckeeCZ/lucas"
    },
    "dependencies": {
        "@types/lodash": "^4.14.120",
        "@types/react-custom-scrollbars": "^4.0.5",
        "lodash": "^4.17.11",
        "react-custom-scrollbars": "^4.2.1",
        "react-display-name": "^0.2.4",
        "react-file-uploader": "^1.0.0",
        "utility-types": "^2.1.0"
    },
    "peerDependencies": {
        "prop-types": "15.7.x",
        "react": "16.8.x",
        "react-redux": "7.1.x"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@sambego/storybook-styles": "^1.0.0",
        "@storybook/addon-actions": "^4.1.9",
        "@storybook/addon-info": "^4.1.3",
        "@storybook/addon-links": "^4.1.3",
        "@storybook/addon-options": "^4.1.3",
        "@storybook/addon-storysource": "^4.1.3",
        "@storybook/react": "^4.1.9",
        "@types/enzyme": "^3.1.15",
        "@types/jest": "^23.3.13",
        "@types/react": "16.8.x",
        "@types/react-dom": "16.8.x",
        "@types/react-intl": "^2.3.14",
        "@types/react-redux": "7.1.x",
        "@types/redux": "^3.6.0",
        "@types/storybook__addon-actions": "^3.4.1",
        "@types/storybook__react": "^4.0.0",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.4",
        "babel-plugin-transform-imports": "^1.5.1",
        "changelog-it": "github:AckeeCZ/changelog-it",
        "cross-env": "^5.2.0",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.7.1",
        "eslint": "^5.10.0",
        "eslint-config-ackee": "^0.9.0",
        "jest": "^23.6.0",
        "onchange": "^5.2.0",
        "package-size": "^2.3.0",
        "prettier-config-ackee": "0.0.5",
        "prop-types": "15.7.x",
        "react": "16.8.x",
        "react-dom": "16.8.x",
        "react-intl": "^2.8.0",
        "react-redux": "7.1.x",
        "ts-jest": "^23.10.5",
        "tslint": "^5.12.0",
        "tslint-config-ackee": "^0.2.5",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.17.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.2"
    },
    "publishConfig": {
        "access": "public"
    }
}
